{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": [
    "main.ts",
    "agent/**/*",
    "server/**/*",
    "skills/**/*",
    "shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "dist"
  ]
}
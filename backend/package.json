{
  "name": "pinion-signal-agent",
  "version": "1.0.0",
  "description": "Autonomous crypto signal agent built on PinionOS",
  "main": "dist/main.js",
  "scripts": {
    "dev": "nodemon --exec ts-node server/index.ts",
    "dev:signal": "nodemon --exec ts-node server/signal-server.ts",
    "dev:agent": "nodemon --exec ts-node agent/index.ts",
    "dev:all": "ts-node main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@google/genai": "^1.0.1",
    "dotenv": "^17.3.1",
    "ethers": "^6.13.5",
    "express": "^5.1.0",
    "node-cron": "^3.0.3",
    "pinion-os": "^0.3.2",
    "x402-express": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.13.10",
    "@types/node-cron": "^3.0.11",
    "nodemon": "^3.1.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}